{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WebApi",
      "type": "coreclr",
      "request": "launch",
      "program": "${workspaceFolder}/Shop.WebApi/bin/Debug/net8.0/Shop.WebApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Shop.WebApi/",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
      },
    }
  ]
}